<Window
    Name="MainAppWindow"
    x:Class="WpfPracticalProject.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:WpfPracticalProject.UserControls"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="700"
    Width="400">
    <Grid
        Margin="1">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="0.5*" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        <uc:TableParametersUserControl
            Grid.Row="0" />
        <!-- Tables List -->
        <uc:TablesListUserControl
            Grid.Row="1" />
    </Grid>
</Window>