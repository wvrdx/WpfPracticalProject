<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style
        TargetType="TextBlock">
        <Setter
            Property="FontSize"
            Value="14" />
        <Setter
            Property="Margin"
            Value="5" />
        <Setter
            Property="TextWrapping"
            Value="Wrap" />
    </Style>
    <Style
        TargetType="Button">
        <Setter
            Property="FontSize"
            Value="24" />
        <Setter
            Property="Margin"
            Value="2" />
    </Style>
</ResourceDictionary>