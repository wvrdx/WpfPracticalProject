<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:convs="clr-namespace:WpfPracticalProject.Common.Converters">

    <convs:BooleanToVisibilityConverter
        x:Key="BoolToVisibility" />
    <Style
        TargetType="TextBlock">
        <Setter
            Property="FontSize"
            Value="50" />
        <Setter
            Property="HorizontalAlignment"
            Value="Right" />
    </Style>
    <Style
        x:Key="comboBoxItem"
        TargetType="TextBlock">
        <Setter
            Property="FontSize"
            Value="30" />
        <Setter
            Property="Margin"
            Value="5" />
    </Style>
    <Style
        TargetType="TextBox">
        <Setter
            Property="FontSize"
            Value="40" />
        <Setter
            Property="Margin"
            Value="5" />
    </Style>
    <Style
        TargetType="Button">
        <Setter
            Property="FontSize"
            Value="40" />
        <Setter
            Property="Margin"
            Value="5" />
    </Style>
    <Style
        TargetType="ComboBox">
        <Setter
            Property="FontSize"
            Value="50" />
        <Setter
            Property="Margin"
            Value="5" />
    </Style>
</ResourceDictionary>