<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:convs="clr-namespace:WpfPracticalProject.Common.Converters">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="/WpfPracticalProject;component/Common/Styles/GlobalStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <convs:ColumnConfigToDynamicGridViewConverter
        x:Key="ColumnConfigToDynamicGridViewConverter" />
    <convs:ColumnToComboBoxElementConverter
        x:Key="ColumnToComboBoxElementConverter" />
    <convs:ColumnToSelectedColumnsConverter
        x:Key="ColumnToSelectedColumnsConverter" />
    <convs:ColumnConfigToGridViewColumnConverter
        x:Key="ColumnConfigToGridViewColumnConverter" />
    <convs:ColumnsVisibilityToListBehaviourArgConverter
        x:Key="ColumnsVisibilityToListBehaviourArgConverter" />
    <Style
        TargetType="TextBlock" />
    <Style
        TargetType="ListView">
        <Setter
            Property="HorizontalAlignment"
            Value="Stretch" />
        <Setter
            Property="VerticalAlignment"
            Value="Stretch" />
        <Setter
            Property="Margin"
            Value="2" />
    </Style>
</ResourceDictionary>